<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lock_gestureview"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:text="@string/unlock_1"
        />
    <com.wangnan.library.GestureLockView
        android:id="@+id/lock_gestureview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:press_color="@color/colorPrimary"
        app:error_color="@color/red"
        app:line_thickness="6dp"
        />

</RelativeLayout>