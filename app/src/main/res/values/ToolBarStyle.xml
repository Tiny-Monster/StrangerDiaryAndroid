<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseToolBarStyle" parent="@style/ThemeOverlay.AppCompat">
        <!--toolbar 标题和溢出菜单按钮字体的颜色-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--系统图标的颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--actionbar 按下效果-->
        <!--<item name="android:actionBarItemBackground">@drawable/action_bar_bg_selector</item>-->
        <!--自定义溢出的menu样式-->
        <item name="actionOverflowMenuStyle">@style/overflowMenuStyle</item>
        <!--弹出菜单字体颜色-->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--溢出菜单样式-->
    <style name="overflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownWidth">wrap_content</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!--popmenu背景色-->
        <item name="android:popupBackground">@color/white</item>
        <!--偏移量-->
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!--menu菜单按下效果-->.
        <!--<item name="android:selectableItemBackground">@drawable/menu_bg_selector</item>-->
    </style>
</resources>